@using BookingApp_v2.Data;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Client> SignInManager
@inject UserManager<Client> UserManager
@model IEnumerable<BookingApp_v2.Models.RoomVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Rooms</h1>

<p>
    <a asp-action="Create" class="btn btn-success"> <i class="fa-light fa-plus fa-beat-fade"></i> Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomName)
            </td>
                @if (SignInManager.IsSignedIn(User))
                {
                    if (User.IsInRole("Administrator"))
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                            <a asp-action="History" asp-route-id="@item.Id" class="btn btn-primary">History</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this record?')" class="btn btn-danger">Delete</a>
                        </td>
                    }
                }
            
        </tr>
}
    </tbody>
</table>

@section Scripts{
<script>
        let table = new DataTable('#tblData');
</script>
}
