@model AdminRoomBookingsViewVM

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-3">
        <div class="card" style="width: 18rem;">
            <div class="card-body text-center">
                <h1 class="card-title"> @Model.TotalBookings</h1>
                <h5 class="card-text">@Html.DisplayNameFor(model => model.TotalBookings)</h5>
            </div>
        </div>
    </div>
</div>

<br/>
<br/>

<hr/>
<h1>Room Bookings Log</h1>
<hr />

<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                Client Name
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Room
            </th>
            <th>
                Date Requested
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RoomBookings) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingClient.FirstName) @Html.DisplayFor(modelItem => item.BookingClient.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRequested)
            </td>
            @*
            <td>
                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id"> <i class="fa fa-file"></i> Review</a>
            </td>*@
        </tr>
}
    </tbody>
</table>

