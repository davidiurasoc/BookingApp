@model AdminRoomBookingsViewVM

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-3">
        <div class="card" style="width: 18rem;">
            <div class="card-body text-center">
                <h1 class="card-title"> @Model.TotalBookings</h1>
                <h5 class="card-text">@Html.DisplayNameFor(model => model.TotalBookings)</h5>
            </div>
        </div>
    </div>
</div>

<br/>
<br/>

<hr/>
<h1>Room Bookings Log</h1>
<hr />

<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                Client Name
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Room
            </th>
            <th>
                Date Requested
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RoomBookings) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingClient.FirstName) @Html.DisplayFor(modelItem => item.BookingClient.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRequested)
            </td>
                <td>
                    @if (item.Status == "Cancelled")
                    {
                        <text>Cancelled</text>
                    }
                    else
                    {
                        @if (DateTime.Now < Convert.ToDateTime(item.StartDate))
                        {
                            <a asp-action="CancelUserBooking" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to cancel your booking?')" class="btn btn-outline-danger"> Cancel <i class="fa-solid fa-pen-to-square"></i></a>
                        }
                    }
                </td>
        </tr>
}
    </tbody>
</table>

